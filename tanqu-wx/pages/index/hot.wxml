            <scroll-view style="height:100%;" scroll-y="true" bindscrolltoupper="scrolltoupper" scrolltoupper="leaveToper" upper-threshold="10">
                <template is="list-item" data="{{...item}}" wx:for="{{list}}" wx:key="{{index}}"></template>
            </scroll-view>
        </swiper-item>
