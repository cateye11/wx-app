            </scroll-view>
        </swiper-item>
        <swiper-item>
            <scroll-view style="height:100%;" scroll-y="true">
                <template is="list-item" data="{{...item}}" wx:for="{{list}}" wx:key="{{index}}"></template>
            </scroll-view>
        </swiper-item>
        </swiper>
    </view>
</template>
