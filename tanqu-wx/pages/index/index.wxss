/**index.wxss**/
.head-nav {
  width: 100%;
  height: 20px;
  margin: 10px 0;
  display: flex;
}

.head-nav view {
  display: flex;
  flex: 1;
  justify-content: center;
}

.platform-nav {
  display: flex;
  width: 100%;
  height: 15px;
  margin: 15px 0;
  position: relative;
}

.platform-nav view {
  font-size: 0.8rem;
  font-weight: bold;
  display: flex;
  flex: 1;
  justify-content: center;
}

.nav-bar {
  width: 20%;
  height: 2px;
  background-color: #000; 
  position: absolute;
  bottom: -15px;
}

.nav-bar view {
  width: 20px;
  padding-bottom: 5%;
  background-color: red;
  position: absolute;
}

.scorll {
  display: flex;
  flex-direction: column;
  width: 100%;
  flex: 1;
}

.swiper {
  height: 100%;
}

.list-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.list-item image {
  width: 100%;
}

.list-item text {
  font-size: 0.8rem;
  line-height: 1.3;
  width: 19rem;
  margin: 15px 0;
}

.footer-nav {
  width: 100%;
  height: 40px;
  background-color: #000;
}