/**index.wxss**/
@import 'animation.wxss';
.head-nav {
  width: 100%;
  height: 20px;
  margin: 10px 0;
  display: flex;
}

.head-nav view {
  font-size: 0.8rem;
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
}

.type-selected {
  font-size: 1rem !important;
}

.platform-nav-pic {
  display: flex;
  margin: 10px 0 15px 0;
  justify-content: space-between;
  padding: 0 0.56rem;
}

.platform-nav-pic-item {
  width: 4.3rem;
  height: 4.3rem;
  background-color: red;
  border-radius: 0.4rem;
}

.platform-nav {
  display: flex;
  width: 100%;
  height: 15px;
  padding: 10px 0;
  position: relative;
}

.platform-nav-item {
  font-size: 0.7rem;
  font-weight: bold;
  display: flex;
  flex: 1;
  justify-content: center;
}

.nav-bar {
  width: 17%;
  border-bottom: 2px solid #000;
  position: absolute;
  bottom: 0;
  display: flex;
  justify-content: center;
  transition: all linear 0.2s;
}

.nav-bar view {
  width: 0;
  height: 0;
  border: 5px solid transparent;
  border-bottom-color: #000;
}

.scorll {
  display: flex;
  flex-direction: column;
  width: 100%;
  flex: 1;
}

.swiper {
  width: 100%;
}

.list-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.media {
  width: 100%;
}

.hot-desc {
  font-size: 0.8rem;
  line-height: 1.3;
  width: 19rem;
  margin: 15px 0;
}

.madia-area {
  width: 100%;
  position: relative;
}

.hot-author-info {
  width: 100%;
  position: absolute;
  bottom: 10px;
  padding: 0 10px;
  box-sizing: border-box;
  color: #fff;
}

