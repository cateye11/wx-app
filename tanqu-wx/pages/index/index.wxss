/*订阅*/
.sub-nav-item {
  display: flex;
  width: 3rem;
  font-size: 0.8rem;
  font-weight: bold;
  justify-content: center;
}

.sub-list-item {
  display: flex;
  flex-direction: column;
}

.sub-list-item .media {
  width: 100%;
}

.sub-detail {
  display: flex;
  flex-direction: column;
  padding: 15px;
}

.sub-detail .desc {
  font-size: 0.9rem;
  line-height: 1.3;
  margin: 20px 0 15px 0;
}

.sub-detail .sub-type {
  font-size: 1rem;
  line-height: 1;
  font-weight: bold;
}

.author {
  display: flex;
}

.sub-avatar {
  width: 1.2rem;
  height: 1.2rem;
  border-radius: 0.7rem;
  margin-right: 6px;
}

.author-name {
  font-size: 0.6rem;
  font-weight: bold;
  margin-bottom: 2px;
}

.pub-time {
  font-size: 0.5rem;
  font-weight: bold;
}

.sub-platform text {
  font-size: 0.5rem;
  margin-right: 5px;
  font-weight: bold;
}

.sub-platform image {
  width: 1rem;
  height: 1rem;
}

/*专题*/
.special-list-item {
  height: 11rem;
  position: relative;
}

.special-list-item image {
  width: 100%;
  height: 100%;
}

.special-title {
  position: absolute;
  font-size: 0.9rem;
  font-weight: bold;
  color: #fff;
  top: 3rem;
  padding: 0 2rem;
  line-height: 1.5;
}