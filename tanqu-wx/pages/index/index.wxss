/**index.wxss**/
.head-nav {
  width: 100%;
  height: 20px;
  margin: 10px 0;
  display: flex;
}

.head-nav view {
  font-size: 0.8rem;
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
}

.type-selected {
  font-size: 1rem !important;
}

.platform-nav-pic {
  display: flex;
  margin: 10px 0 15px 0;
  justify-content: space-between;
  padding: 0 0.56rem;
}

.platform-nav-pic-item {
  width: 4.3rem;
  height: 4.3rem;
  background-color: red;
  border-radius: 0.4rem;
}

.platform-nav {
  display: flex;
  width: 100%;
  height: 15px;
  padding: 10px 0;
  position: relative;
}

.platform-nav-item {
  font-size: 0.7rem;
  font-weight: bold;
  display: flex;
  flex: 1;
  justify-content: center;
}

.nav-bar {
  width: 17%;
  border-bottom: 2px solid #000;
  position: absolute;
  /*left: 2.5%;*/
  bottom: 0;
  display: flex;
  justify-content: center;
}

.nav-bar view {
  width: 0;
  height: 0;
  border: 5px solid transparent;
  border-bottom-color: #000;
}

.scorll {
  display: flex;
  flex-direction: column;
  width: 100%;
  flex: 1;
}

.swiper {
  height: 100%;
}

.list-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.list-item image {
  width: 100%;
}

.list-item text {
  font-size: 0.8rem;
  line-height: 1.3;
  width: 19rem;
  margin: 15px 0;
}

.footer-nav {
  width: 100%;
  height: 40px;
  background-color: #000;
}

/*订阅*/
.sub-nav-item {
  display: flex;
  width: 3rem;
  font-size: 0.8rem;
  font-weight: bold;
  justify-content: center;
}

.sub-list-item {
  display: flex;
  flex-direction: column;
}

.sub-list-item .media {
  width: 100%;
}

.sub-detail {
  display: flex;
  flex-direction: column;
  padding: 15px;
}

.sub-detail .desc {
  font-size: 0.9rem;
  line-height: 1.3;
  margin: 20px 0 15px 0;
}

.sub-detail .sub-type {
  font-size: 1rem;
  line-height: 1;
  font-weight: bold;
}

.author {
  display: flex;
}

.sub-avatar {
  width: 20px;
  height: 20px;
}

/*专题*/
.special-list-item {
  display: flex;
  height: 10rem;
  border-bottom: 1px solid black;
  position: relative;
}

.special-list-item image {
  width: 100%;
  height: 100%;
}

.special-list-item text {
  font-size: 0.9rem;
  color: #fff;
  position: absolute;
  top: 3rem;
  padding: 0 2rem;
  line-height: 1.5;
}